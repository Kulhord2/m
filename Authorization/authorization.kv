

<LoginWidget>:
    name: "login"
    canvas.before:
        Rectangle:
            size:self.size
            #source: "Image/kivy.jpg"
            source: "Image/kivy2.jpeg"

    Label:
        text: "Введите номер телефона"
        pos_hint: {"center_x": 0.5,"center_y": 0.8}
        size_hint: .2, 0.05

    TextInput:
        multiline: False
        pos_hint: {"center_x": 0.5,"center_y": 0.75}
        size_hint: .2, 0.05
    Label:
        text: "Введите пароль"
        pos_hint: {"center_x": 0.5,"center_y": 0.65}
        size_hint: .2, 0.05
    TextInput:
        multiline: False
        pos_hint: {"center_x": 0.5,"center_y": 0.6}
        size_hint: .2, 0.05
    Button:
        text: "Войти"
        pos_hint: {"center_x": 0.5,"center_y": 0.2}
        size_hint: .2, 0.1